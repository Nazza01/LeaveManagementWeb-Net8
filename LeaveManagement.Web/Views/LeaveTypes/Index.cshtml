@model IEnumerable<LeaveTypeVM>

@{
    ViewData["Title"] = "Leave List";
}

<div class="container">
    <div class="row align-items-center justify-content-between">
        <div class="col-auto me-auto">
            <h1>Leave Types List</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Create New</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fa-solid fa-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(function(){
            $('.table').DataTable({
                bAutoWidth: false,
                columnDefs: [
                    {
                        width: "25%", 
                        targets: [0, 1],
                    },
                    {
                        width: "auto", 
                        targets: [2],
                        orderable: false,
                        className: "dt-body-right"
                    },
                ]
            });
        })
    </script>
}